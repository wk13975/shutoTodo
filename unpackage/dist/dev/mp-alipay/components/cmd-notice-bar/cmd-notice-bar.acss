@charset "UTF-8";
/**
 * 通知栏属性样式变量
 */
.cmd-notice-bar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  z-index: 1301;
  font-size: 26rpx;
  min-height: 64rpx;
  background-color: rgba(89, 158, 248, 0.08);
  color: #2F86F6;
  position: relative;
  padding-left: 32rpx;
  box-sizing: border-box;
}
.cmd-notice-bar.cmd-notice-bar-round {
    border-radius: 32rpx;
}
.cmd-notice-bar.activity {
    background-color: #FFEDDE;
    color: #FF843D;
}
.cmd-notice-bar.warning {
    background-color: #FFEEEF;
    color: #FF5B60;
}
.cmd-notice-bar-left,
.cmd-notice-bar-right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cmd-notice-bar-left {
  padding-right: 12rpx;
}
.cmd-notice-bar-right {
  padding-right: 32rpx;
}
.cmd-notice-bar-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin: auto;
  width: auto;
  line-height: 64rpx;
  white-space: nowrap;
  overflow: hidden;
}
.cmd-notice-bar-content.cmd-notice-bar-multi-content {
    padding: 20rpx 32rpx 20rpx 0;
    line-height: 36rpx;
    white-space: normal;
}
.cmd-notice-bar-content .cmd-notice-bar-content-animate {
    padding-left: 100%;
    display: inline-block;
    -webkit-animation: cmd-notice-bar-animation linear 16s infinite both;
            animation: cmd-notice-bar-animation linear 16s infinite both;
}
@-webkit-keyframes cmd-notice-bar-animation {
0% {
    -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
}
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
}
@keyframes cmd-notice-bar-animation {
0% {
    -webkit-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
}
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
}

